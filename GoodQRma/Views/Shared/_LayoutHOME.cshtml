<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GoodQRma</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <img src="~/Images/GoodQRma_logo.png" />

                @Html.ActionLink("GoodQRma", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">               


                    <li>@Html.ActionLink("View Event", "Index", "Event")</li>
                    <li>@Html.ActionLink("Create Event", "Create", "Event")</li>

                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>


                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div id="myCarousel" class="carousel slide" style="width: 1000px; height:400px; margin: 0 auto" data-interval="3000" data-ride="carousel">

            <!-- Carousel indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <!-- Carousel items -->
            <div class="carousel-inner">
                <div class="item active">
                    <center>
                        <img src="~/Images/GoodQRmaBANNER.png" alt="GoodQRma LOGO">
                    </center>
                    <div class="carousel-caption">
                        


                    </div>
                </div>
                <div class="item">
                    <img src="~/Images/GoodQRmaBANNER2.png" alt="Cartoon Image">
                    <div class="carousel-caption">
                        

                    </div>
                </div>
                <div class="item">
                    <img src="~/Images/GoodQRmaBANNER3.png" alt="Real Photo">
                    <div class="carousel-caption">
                        

                    </div>
                </div>
            </div>
            <!-- Carousel nav -->
            <a class="carousel-control left" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>





        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <center>
                    <p>&copy; @DateTime.Now.Year - GoodQRma.com</p>
                    <img src="~/Images/GoodQRma_logo.png" />
                </center>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqueryui")
        @Styles.Render("~/Content/themes/base/css")
        @RenderSection("scripts", required: false)
</body>
</html>
